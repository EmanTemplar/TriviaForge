# Server Configuration
APP_PORT=3000
NODE_ENV=production

# Debug Mode (Development Only)
# Set to 'development' or DEBUG_MODE=true to enable debug endpoints
# WARNING: Never enable in production! Provides unrestricted access to system internals
# DEBUG_MODE=true
# When enabled, visit http://localhost:3000/debug for the debug console

# Verbose Logging (Development Only)
# Set to 'true' to enable detailed logging (auto-save, zombie cleanup, etc.)
# Automatically enabled when DEBUG_MODE is enabled
# VERBOSE_LOGGING=true

# Database Configuration
DATABASE_URL=postgres://trivia:trivia@db:5432/trivia

# Security
ADMIN_PASSWORD=
# Change this to a secure password for admin/presenter access

CSRF_SECRET=
# CSRF protection secret (generate a random 64-character string)
# Example generation: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"

# Timezone Configuration
TZ=America/New_York
# Examples: America/Los_Angeles, America/Chicago, America/Denver,
#           Europe/London, Asia/Tokyo, Australia/Sydney
# Full list: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones

# Server URL for QR Code Generation
# Set this to your LOCAL server's IP address or hostname
# Examples:
#   Local network: http://192.168.1.100:3000
#   Domain: http://trivia.local:3000
SERVER_URL=http://[ENTER HERE]:3000

# Your actual host machine IP
HOST_IP=

# Session Configuration
SESSION_TIMEOUT=3600000
# Session timeout in milliseconds (default: 1 hour = 3600000ms)

# Optional: Custom App Name
APP_NAME=TriviaForge
# This will appear in the navbar and page titles
